/* 个人中心 */
.user_info_wrap{
  height: 280rpx;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: row;
}
/*头像*/
  .user_icon{
  display:block;
  overflow: hidden;
  border-radius: 100%;
  position: relative;
  padding: 10px;
  width: 200rpx;
  height: 200rpx;
  }
.user_name{
padding: 10px;
}
.fan_content{
  position: relative;
}
.fan_main{
  position: absolute;
  top: 10rpx;
  width: 400rpx;
}
.fan_wrap{
  background: #fff;
  font-size: 30rpx;
  display: flex;
}
navigator{
  flex: 1;
  text-align: center;
}
.fan_num{
    color: red;  
  }
  /*编辑资料*/
  .edit_wrap{
    margin: 10rpx;
    padding: 5rpx;
    font-size: 30rpx;
    text-align: center;
    border: 1rpx solid rgb(133, 129, 129);
    border-radius: 50%;
  }

  .comment_logo{
    margin: 40px 40px 20px 80px;
    width: 400rpx;
    height: 400rpx;
  }
  .comment_title{
    font-size: 40rpx;
    text-align: center;
  }
  .comment{
    padding: 5rpx;
    font-size: 30rpx;
    text-align: center;
    color: dimgrey;
  }
.send_wrap{
  padding: 40rpx;
  width: 30px;
  height: 30px;
}