.buy_wrap{
  margin-top: 5rpx;
  display: flex;
  border-bottom: 2rpx solid rgb(235, 231, 231);
}
.buy_goods{
  margin-bottom: 5rpx;
  display: flex;
  flex: 2;
  justify-content: center;
  align-content: center;
}
image{
  width: 70%;
}
.buy_info{
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: space-around;
}
/*太长省略显示 两行*/
.buy_name{
  margin-right: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.buy_price{
  margin-bottom: 20rpx;
  color: red;
  font-size: 40rpx;
}
.buy_item{
  display: flex;
  border-bottom: 5rpx solid #ccc;
}
.item_left{
  margin: 10rpx 10rpx;
  display: flex;
  justify-content: center;
  flex-grow: 1;
}
.item_right{
  margin: 10rpx 10rpx;
  display: flex;
  justify-content: center;
  flex-grow: 1;
}